                        <Label text="Describe the problem in the second text box" textAlignment="CENTER" wrapText="true">
                           <font>
                              <Font size="30.0" />
                           </font>
                        </Label>
                        <Label text="Select the problem type" textAlignment="CENTER" wrapText="true">
                           <font>
                              <Font size="30.0" />
